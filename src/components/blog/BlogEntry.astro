---
import Footer from "../shared/Footer.astro";
import Nav from "../shared/Nav.astro";
import type BlogContent from "../../interfaces/BlogContentList";
import SubPageLayout from "../../layouts/SubPageLayout.astro";
import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";

interface Props {
  title: string;
  ogTitle: string;
  description: string;
  ogDescription: string;
  keywords: string;
  createdBy: string;
  skill: string;
  date: string;
  blogImage?: ImageMetadata;
  content: BlogContent[];
}

const { title, ogTitle, description, ogDescription, keywords,createdBy, skill, date, blogImage, content } = Astro.props;

---

<SubPageLayout
  title={ 'LABSTUDIO | ' + title }
  ogTitle={ ogTitle }
  description={ description }
  ogDescription={ ogDescription }
  keywords={ keywords }
>
  <Nav />

  <main class="w-100 d-flex flex-column justify-content-center align-items-center pb-11">
    <div class="blog-container">
      <h1 class="m-0">{ title }</h1>
      <p class="text-gray-700 ms-1">Por <span>{ createdBy }</span> - <span>{ skill }</span> en <span class="lab-font-color">LABSTUDIO</span> â€¢ <span>{ date }</span></p>

      <Image src={blogImage} alt="linea" class="w-100 h-auto shadow rounded mt-4 mb-6" />
    
      <div class="w-100 d-flex align-items-center flex-column pt-6">

        {
          content.map((piece) => (
            <div class="w-100 d-flex flex-column">
              <h2 class="h2 text-start">{ piece.subTitle }</h2>
              <p set:html={piece.text}></p>

              {
                piece.img && (
                  <Image src={piece.img} alt={ 'imagen sobre: ' + piece.subTitle } class="w-100 h-auto" />
                )
              }
            </div>
          ))
        }

      </div>

    </div>
  </main>

  <Footer useMap={ false }/>
</SubPageLayout>


<style>

  .blog-container {
    padding-top: 4rem;
    width: 800px;
  }

  .blog-container h1 {
    font-size: 2.6rem;
    font-weight: 600;
  }

  @media screen and (max-width: 862px) {
    .blog-container {
      width: 100%;
      padding: 0 4rem;
    }

    .blog-container h1 {
      font-size: 2.2rem;
    }
  }

  @media screen and (max-width: 500px) {
    .blog-container {
      padding: 0 2rem;
    }

    .blog-container h1 {
      font-size: 1.8rem;
    }
  }

  @media screen and (max-width: 340px) {
    .blog-container {
      padding: 0 1rem;
    }
  }
</style>